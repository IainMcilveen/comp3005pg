html
    head
        title Manage Books 
    body
        include ../pages/adminHeader
        script(src="/js/removeBook.js")
        button#addBook(type="button", onclick="window.location.href = '/addBookPage'") add book
        br
        h2 All Books:
        div#books
            each val in books
                div#book
                    a(href="/books/"+val.isbn) #{val.title} 
                    p genre: #{val.genre} 
                    p price: #{val.price}$
                    p author: #{val.first_name} #{val.last_name}
                    button#removeBook(type="button", onclick="removeBook('"+val.isbn+"')") remove book
                br
