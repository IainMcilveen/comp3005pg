        input#author(type="textbox")
        p="ISBN:"
        input#isbn(type="textbox")
        p="genre:"
        input#genre(type="textbox")
        p="number of pages:"
        input#numpages(type="textbox")
        p="price:"
        input#price(type="textbox")
